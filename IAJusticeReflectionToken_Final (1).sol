contract IAJusticeReflectionToken is ERC20, Ownable {
    address public donationAddress;

    constructor(address _donationAddress) ERC20("IAJusticeReflectionToken", "IAJRT") {
        require(_donationAddress != address(0), "Endereco invalido");

        uint256 totalSupply = 1_000_000_000 * 10 ** decimals();
        uint256 donationAmount = (totalSupply * 20) / 100;
        uint256 deployerAmount = totalSupply - donationAmount;

        donationAddress = _donationAddress;
        _mint(donationAddress, donationAmount);
        _mint(msg.sender, deployerAmount);
